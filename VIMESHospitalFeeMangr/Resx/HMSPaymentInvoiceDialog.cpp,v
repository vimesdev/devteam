CHMSPaymentInvoiceDialog::CHMSPaymentInvoiceDialog(CWnd *pParent):
	CGuiDialog(pParent){

	m_nDlgWidth = 910;
	m_nDlgHeight = 605;
	SetDefaultValues();
}
